<link rel="stylesheet" type="text/css" href="/stylesheets/application.css">

<h1>Apartment #<%= @apartment.id %></h1>

<p>
  <b>ID</b><br>
  <%= @apartment.id %>
</p>
<p>
  <b>Address</b><br>
  <%= @apartment.address %>
</p>
<p>
  <b>Rent</b><br>
  $<%= @apartment.rent_per_month %>.00
</p>
<p>
  <b>Allows pets</b><br>
  <%= @apartment.does_allow_pets %>
    <%if @apartment.does_allow_pets == true %>
      YES
    <% elsif @apartment.does_allow_pets == false %>
      NO
    <% elsif @apartment.does_allow_pets == nil %>
      ??
    <% end %>
</p>
<p>
  <b>URL</b><br>
  <a href="<% @apartment.url %>"><%= @apartment.url %></a>
</p>

