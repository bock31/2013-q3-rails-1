<h1>Customize your bracelet</h1>

<h2>Preview</h2>

<div style='border:1px black solid; text-align:center; width:500px'>
  <% @bracelet_lines.each do |bracelet| %>
    <% if bracelet.font_size == 16 %>
      <div style='font-size:16pt'>
        <%= bracelet.text %>
      </div>
    <% else %>
      <div style='font-size:12pt'>
        <%= bracelet.text %>
      </div>    
    <% end %>
  <% end %>
</div>

<ul>
  <li>
    <a href="/line1">Edit line 1</a>
  </li>
  <li>
    <a href="/line2">Edit line 2</a>
  </li>
</ul>
