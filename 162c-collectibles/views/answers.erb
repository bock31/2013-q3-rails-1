<% if params[:commit] == "Answer 1" %>
  <% Collectible.where(episode_id: 
    Episode.where(name: params[:episode_name]).first.id).all.each do |collectible| %>
    <%= collectible.name %><br>
  <% end %> 
<% end %>

<% if params[:commit] == "Answer 2" %>
  <% collectible_name = params[:collectible_name_part] %>
  <% Collectible.where("name ilike  ?", "%#{collectible_name}%").all.each do |collectible| %>
    <%= collectible.name %><br>
  <% end %>
<% end %>

<% if params[:commit] == "Answer 3" %>
  <% @collectibles.each do |collectible| %>
    <%= collectible.name %>, <%= Category.find(collectible.category_id).name %><br>
  <% end %>
<% end %>

<% if params[:commit] == "Answer 4" %>
  <% Episode.where("year < 1990").all.each do |episode| %>
    <%= episode.name %><br>
  <% end %>
<% end %>
